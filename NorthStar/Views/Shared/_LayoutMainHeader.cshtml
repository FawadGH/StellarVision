@using PTSS.Application.SMSCore.Models;
@*<%--HEADER--%>*@
@{
    Dictionary<string, object> htmlAttributes = new Dictionary<string, object>();
}
<header class="main-header">
    <!-- Logo -->
    <a href="#" class="logo">
        <!-- mini logo for sidebar mini 50x50 pixels -->
        <span class="logo-mini"><b>N</b>SS</span>
        <!-- logo for regular state and mobile devices -->
        @*<span class="logo-lg"><b>T</b>est <b>S</b>uccessful</span>*@
        <span class="logo-lg">@ApplicationWrapper.OrganizationModel.Name</span>
    </a>

    <nav class="navbar navbar-static-top">
        <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button" id="Left_menu_toggle_button">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </a>
        <!-- Sidebar toggle button-->


        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">

                

                <li class="dropdown user user-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <img src="~/img/man.png" class="user-image" alt="User Image" />
                        <span class="hidden-xs">@SessionWrapper.CurrentUserModel.FullName</span>
                    </a>
                    <ul class="dropdown-menu">
                        <!-- User image -->
                        <li class="user-header">
                            <img src="~/img/man.png" class="img-circle" alt="User Image" />

                            <p>
                                Web Developer

                                <small>Member since Nov. 2015</small>
                            </p>
                        </li>
                        <!-- Menu Body -->
                        <li class="user-body">
                            <div class="row">
                                <div class="col-xs-4 text-center">
                                    <a href="#">Followers</a>
                                </div>
                                <div class="col-xs-4 text-center">
                                    <a href="#">Sales</a>
                                </div>
                                <div class="col-xs-4 text-center">
                                    <a href="#">Friends</a>
                                </div>
                            </div>
                            <!-- /.row -->
                        </li>
                        <!-- Menu Footer-->
                        <li class="user-footer">
                            <div class="pull-left">
                                <a href="#" class="btn btn-default btn-flat">Profile</a>
                            </div>
                            <div class="pull-right">
                                @*<input type="submit" class="btn btn-default btn-flat" value="Sign Out" id="LogOutButton" />*@
                                
                                <a href='@Url.Action("Index","Logout")' class="btn btn-default btn-flat">Sign Out</a>
                            </div>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>

</header>
